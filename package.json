{
  "name": "spaicheck",
  "version": "1.0.0",
  "description": "EVE Online companion app to help corporations detect spais ",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint .",
    "pretest": "npm run lint --silent"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eve-apps/spaicheck.git"
  },
  "author": "detrohutt@gmail.com",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/eve-apps/spaicheck/issues"
  },
  "homepage": "https://github.com/eve-apps/spaicheck#readme",
  "dependencies": {
    "async": "^1.5.0",
    "autoprefixer": "^6.5.0",
    "es6-denodeify": "^0.1.5",
    "eveonlinejs": "https://github.com/eve-apps/eveonlinejs/archive/ad7377b2dca7dd609e5bcb134b0284402b92ae9c.tar.gz",
    "fast-json-patch": "^0.5.4",
    "humanize-plus": "^1.8.2",
    "lodash": "^4.16.4",
    "moment": "^2.15.1",
    "postcss-cli": "^2.6.0",
    "serialize-error": "^1.0.0"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "browsers": [
          "last 2 versions"
        ]
      }
    }
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "allowImportExportEverywhere": true
    },
    "plugins": [
      "meteor"
    ],
    "extends": [
      "airbnb",
      "plugin:meteor/recommended"
    ],
    "settings": {
      "import/resolver": "meteor"
    },
    "rules": {
      "linebreak-style": [
        "error",
        "unix"
      ],
      "import/no-absolute-path": "off",
      "import/prefer-default-export": "off",
      "func-names": [
        "error",
        "always"
      ],
      "no-console": "off",
      "no-plusplus": "off",
      "no-underscore-dangle": [
        "error",
        {
          "allow": [
            "_id"
          ]
        }
      ],
      "import/no-extraneous-dependencies": "off",
      "import/extensions": [
        "error",
        {
          "js": "never"
        }
      ],
      "meteor/audit-argument-checks": "off",
      "max-len": [
        "warn",
        {
          "code": 100,
          "tabWidth": 2
        }
      ],
      "space-before-function-paren": [
        "error",
        "always"
      ],
      "meteor/no-session": "off"
    }
  },
  "devDependencies": {
    "babel-eslint": "^7.0.0",
    "eslint": "^3.7.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-import-resolver-meteor": "^0.3.3",
    "eslint-plugin-import": "^2.0.1",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-meteor": "^4.0.1",
    "eslint-plugin-react": "^6.4.1"
  }
}
